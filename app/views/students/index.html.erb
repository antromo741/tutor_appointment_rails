<h1>Students List</h1>
<button><%= link_to  "Register Student", new_student_path %></button>
<% @students.each do |student| %>

    <p><%= link_to student.name, student_path(student) %></p>

<% end %>

<%= form_tag( students_path , method: :get ) do %>
   <div>
   <p>
   <h1> Search Student <%= text_field_tag 'Search Student'  %></h1>
   </p>

   <div>
   <%= submit_tag 'Save' %>
   </div>

   </div> 
<% end %>

